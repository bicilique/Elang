# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=elang_user
DB_PASSWORD=change_this_password
DB_NAME=elang_db
DB_SSLMODE=disable

# MinIO Configuration
MINIO_ENDPOINT=nginx:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=elang-sbom

# Application Configuration
APP_PORT=8080
GIN_MODE=release

# GitHub API Token (Optional - for enhanced dependency tracking)
# Create token at: https://github.com/settings/tokens
# Required scopes: public_repo
GITHUB_TOKEN=

# Telegram Bot Configuration (Optional - for notifications)
# Create bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Monitoring Configuration
MONITORING_ENABLED=true
DEFAULT_POLLING_INTERVAL_MINUTES=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
